---
import Layout from "../layouts/Layout.astro";
import projects from "../data/projectData";
---

<Layout title="Creative Web Developer | Mihai Ursu Portfolio">
    <main>
        <h1>Projects</h1>
        {
            projects.map((project) => {
                return (
                    <a
                        href={project.url}
                        class="project"
                    >
                        <h2>{project.title}</h2>
                        <p>{project.description}</p>
                    </a>
                );
            })
        }
    </main>
</Layout>
